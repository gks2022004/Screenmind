{
  "name": "ScreenMind",
  "short_name": "ScreenMind",
  "description": "A smart screenshot assistant that helps you organize, annotate, and set reminders for your screenshots using AI.",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#121212",
  "theme_color": "#8b5cf6",
  "orientation": "portrait",
  "icons": [
    {
      "src": "/favicon.svg",
      "sizes": "any",
      "type": "image/svg+xml",
      "purpose": "any maskable"
    },
    {
      "src": "/icon-192.png",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "/icon-512.png",
      "sizes": "512x512",
      "type": "image/png"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "files": [
        {
          "name": "image",
          "accept": ["image/*"]
        }
      ]
    }
  },
  "screenshots": [
    {
      "src": "/screenshot1.png",
      "sizes": "540x720",
      "type": "image/png"
    }
  ],
  "categories": ["productivity", "utilities"],
  "shortcuts": [
    {
      "name": "New Screenshot",
      "short_name": "New",
      "description": "Add a new screenshot",
      "url": "/?action=new",
      "icons": [{ "src": "/favicon.svg", "sizes": "96x96" }]
    }
  ]
}
